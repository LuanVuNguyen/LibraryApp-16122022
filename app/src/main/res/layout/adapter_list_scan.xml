<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/lv_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cell_shape_title_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_column1"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_title_4"

            android:text="Num"
            android:textColor="@color/BlueGray" />

        <TextView
            android:id="@+id/list_column2"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="3"
            android:background="@drawable/cell_shape_title_4"
            android:text="booktitle"
            android:textColor="@color/BlueGray" />

        <TextView
            android:id="@+id/list_column3"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="3"
            android:background="@drawable/cell_shape_title_4"
            android:text="RFID"
            android:textColor="@color/BlueGray" />

        <TextView
            android:id="@+id/list_column4"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:background="@drawable/cell_shape_title_4"
            android:text="Author"
            android:textColor="@color/BlueGray" />

        <TextView
            android:id="@+id/list_column5"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:background="@drawable/cell_shape_title_4"
            android:textColor="@color/BlueGray"
            android:text="categories" />
    </LinearLayout>
</LinearLayout>
