<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSFER"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Type Transfer" />

                <Spinner
                    android:id="@+id/spinner_type"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="4"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_transfer1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:gravity="center_vertical"
                    android:text="Operation Type" />

                <Spinner
                    android:id="@+id/spinner_transfer1"
                    style="@style/spinner_style"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:layout_weight="4"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_transfer2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Contact"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_transfer2"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_weight="4"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_transfer3"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:gravity="center_vertical"
                    android:text="Source Location"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_transfer3"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="58dp"

                    android:layout_weight="4"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_transfer4"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:gravity="center_vertical"
                    android:text="Destination Location"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_transfer4"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="58dp"

                    android:layout_weight="4"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_document"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Source Document"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edt_sourcedocument_transfer"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_weight="4"
                    android:ems="10"
                    android:hint="e.g. PO0032"
                    android:inputType="textPersonName"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <android.widget.Button
            android:id="@+id/btn_transfer_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_shape_bluelight"
            android:text="CANCLE"
            android:textColor="@color/BlueDarkGray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/btn_transfer_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_shape_bluelight"
            android:text="NEXT"
            android:textColor="@color/BlueDarkGray"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>